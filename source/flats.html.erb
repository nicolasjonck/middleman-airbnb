<div class="container" id="flats">
  <h2>Available flats</h2>
  <% p data.flats%>
  <div class="row">
    <%data.flats.each do |owner, flat|%>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 100%), url('images/<%=flat.city_slug%>.jpg');">
            <div class="card-description">
              <h3><%= flat.city_name %></h3>
              <p><%= flat.description %></p>
            </div>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class:"card-user" %>
            <%= link_to "", "flats/#{owner}.html", class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
