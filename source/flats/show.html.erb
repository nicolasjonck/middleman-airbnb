<%flat = data.flats[owner]%>

<div class="flat-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%=flat.city_slug %>');">
</div>

<div class="main-container">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="flat-details">
          <%=image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle"%>
          <p><%= flat.name %></p>
          <h1><%= flat.description %></h1>
          <p><%= flat.city_name %></p>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <div class="form-container">
          <h2>Book your flat now</h2>
          <form>
            <div class="form-group">
              <input type="text" class="form-control" id="checkin-date" placeholder="checkin (dd/mm/yyyy)">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" id="checkout-date" placeholder="checkout (dd/mm/yyyy">
            <div class="form-group">
              <select name id="guests" class="form-control">
                <option value="1">1 guest</option>
                <option value="2">2 guests</option>
                <option value="3">3 guests</option>
              </select>
            </div>
            <button type="submit" class="btn btn-primary">Book it!</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

